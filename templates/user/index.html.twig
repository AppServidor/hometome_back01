{% extends 'base.html.twig' %}

{% block title %}Usuarios{% endblock %}

{% block body %}
{% include 'navAdmin.html.twig' %}
    <h1>Usuarios</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.nombre }}</td>
                <td>{{ user.Apellidos }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Mostrar</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No hay registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_register') }}">Crear nuevo</a>
{% endblock %}
